<launch>
    <!-- urdf path -->
    <let name="urdf_path"
         value="$(find-pkg-share my_robot_description)/urdf/my_robot_main.urdf.xacro" />

    <let name="rviz_config_path"
         value="$(find-pkg-share my_robot_description)/rviz/rviz_config.rviz" /> 

    <let name="gazebo_config_path"
         value="$(find-pkg-share my_robot_bringup)/config/gazebo_bridge.yaml" />
 
    <!-- <node name="joint_state_publisher" pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui" /> -->

    <!-- robot_state_publisher node -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <!-- gazebo node with empty world -->
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="$(find-pkg-share my_robot_bringup)/worlds/og_world.sdf -r" />
    </include>

    <!-- node to spawn the robot in gazebo -->
    <node pkg="ros_gz_sim" exec="create"
          args="-topic robot_description" />

    <!-- node for bridge between ros and gazebo-->
    <node pkg="ros_gz_bridge" exec="parameter_bridge">
          <param name="config_file"
                 value="$(var gazebo_config_path)" />
    </node>
    
    <!-- rviz node -->
    <node pkg="rviz2" exec="rviz2" output="screen"
          args="-d $(var rviz_config_path)" />

    <!-- âœ… static transform publisher -->
    <node pkg="tf2_ros" exec="static_transform_publisher"
          args="0 0 0 0 0 0 lidar_link my_robot/base_footprint/lidar_sensor"
          name="static_transform_publisher"
          output="screen" />

</launch>
